<Page x:Class="Course_kepeer_1.My_contract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course_kepeer_1"
      mc:Ignorable="d" 
    MinHeight="534" MinWidth="726"
      Title="My_contract">

    <Grid>
        <ComboBox Height="40" FontSize="20" Width="320" x:Name="status_contract" Margin="30,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <ComboBoxItem IsSelected="True">New</ComboBoxItem>
            <ComboBoxItem>Active</ComboBoxItem>
            <ComboBoxItem>Rejected</ComboBoxItem>
        </ComboBox>
        <ListBox SelectionChanged="contract_SelectionChanged" x:Name="contract" Margin="0,100,0,0" HorizontalAlignment="Left" Width="400" Height="290" VerticalAlignment="Top"/>
    </Grid>
</Page>
