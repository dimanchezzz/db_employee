<Page x:Class="Course_kepeer_1.My_contract"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Course_kepeer_1"
      mc:Ignorable="d" 
    MinHeight="534" MinWidth="726"
      Title="My_contract">

    <Grid >
        <Button x:Name="new" Click="new_Click"  FontSize="30" Height="60" Width="150" Content="new" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button x:Name="active" Click="active_Click"  FontSize="30" Height="60" Width="150" Content="active" Margin="190,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button x:Name="rejected" Click="rejected_Click"  FontSize="30" Height="60" Width="155" Content="rejected" Margin="370,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />

        <ListView  SelectionChanged="listView_SelectionChanged" FontSize="20" x:Name="listView" Margin="0,125,0,0" Height="335" VerticalAlignment="Top" HorizontalAlignment="Left" Width="420">
            <ListView.View>
                <GridView >
                    <GridViewColumn  Width="110" Header="id_client" DisplayMemberBinding="{Binding id_client}"/>
                    <GridViewColumn Width="150" Header="Name" DisplayMemberBinding="{Binding Name}"/>


                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock Height="35" x:Name="user" MinWidth="100"  FontSize="25" Margin="439,125,0,0" HorizontalAlignment="Left" Width="266" VerticalAlignment="Top"/>
        <TextBlock Height="35" x:Name="amount" MinWidth="100"  FontSize="25" Margin="439,210,0,0" HorizontalAlignment="Left" Width="266" VerticalAlignment="Top"/>
        <TextBlock Height="35" x:Name="pay" MinWidth="100"  FontSize="25" Margin="439,295,0,0" HorizontalAlignment="Left" Width="266" VerticalAlignment="Top"/>
        <TextBlock Height="35" x:Name="date" MinWidth="100"  FontSize="25" Margin="439,380,0,0" HorizontalAlignment="Left" Width="266" VerticalAlignment="Top"/>

    </Grid>
</Page>
